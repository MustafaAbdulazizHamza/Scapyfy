# Scapyfy Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM PROVIDERS (at least one required)
# =============================================================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=
# Model to use (default: gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini - https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=
# Alternative name (also supported)
# GEMINI_API_KEY=
# Model to use (default: gemini-2.5-flash-lite)
GEMINI_MODEL=gemini-2.5-flash-lite

# Anthropic Claude - https://console.anthropic.com/
ANTHROPIC_API_KEY=
# Model to use (default: claude-3-5-sonnet-20241022)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama - Local instance
# Local: http://localhost:11434 (default)
OLLAMA_BASE_URL=http://localhost:11434
# Model to use (default: llama3.1:8b)
OLLAMA_MODEL=llama3.1:8b

# =============================================================================
# SECURITY SETTINGS (required for production)
# =============================================================================

# JWT Secret Key - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# WARNING: If not set, a random key is generated each restart (tokens invalidated)
SECRET_KEY=

# Root Password - If not set, a random password is generated on first run
# Must be less than 72 characters (bcrypt limit)
ROOT_PASSWORD=

# Root Email (default: root@scapyfy.example.com)
ROOT_EMAIL=root@scapyfy.example.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# CORS Origins (comma-separated list, use * for all in development)
# Example: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*

# JWT Token expiration in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database URL (default: SQLite)
# For PostgreSQL: postgresql://user:password@localhost/scapyfy
DATABASE_URL=sqlite:///./database.db

# Server configuration
HOST=0.0.0.0
PORT=8000
# Enable auto-reload for development (default: false)
RELOAD=false

# =============================================================================
# SSL/TLS CERTIFICATE SETTINGS (optional, for HTTPS)
# =============================================================================

# Path to SSL certificate file
# SSL_CERTFILE=certs/server.crt

# Path to SSL private key file
# SSL_KEYFILE=certs/server.key

# Path to CA certificates for client certificate verification (mTLS)
# SSL_CA_CERTS=certs/ca.crt

# Client certificate verification level: 0=none, 1=optional, 2=required
# SSL_CERT_REQS=0

# =============================================================================
# RATE LIMITING (optional)
# =============================================================================

# Default rate limit for general endpoints (default: 100/minute)
RATE_LIMIT_DEFAULT=100/minute

# Rate limit for authentication endpoints - stricter to prevent brute force (default: 5/minute)
RATE_LIMIT_AUTH=5/minute

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Directory for log files (default: logs)
LOGS_DIR=logs

# Log rotation interval in hours (default: 24)
LOG_ROTATION_HOURS=24

# Number of backup log files to keep (default: 30)
LOG_BACKUP_COUNT=30

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO
